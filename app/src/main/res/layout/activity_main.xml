<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C1E6E1E1"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="vertical"
            android:padding="20dp">


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/fresh_fruit"
                android:paddingTop="20dp"
                android:paddingBottom="30dp"
                android:text="MY LOCAL BANKS"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="40sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/dbs" />

                <TextView
                    android:id="@+id/tvDBS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:fontFamily="@font/classy_flowers"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="@string/dbs"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="25sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/line2" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/ocbc3" />

                <TextView
                    android:id="@+id/tvOCBC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="10"
                    android:fontFamily="@font/classy_flowers"
                    android:text="@string/ocbc"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="25sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/line2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/uob2" />

                <TextView
                    android:id="@+id/tvUOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:fontFamily="@font/classy_flowers"
                    android:gravity="center_horizontal"
                    android:text="@string/uob"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="25sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/line2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/posb" />

                <TextView
                    android:id="@+id/tvPOSB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:fontFamily="@font/classy_flowers"
                    android:gravity="center_horizontal"
                    android:text="@string/posb"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="25sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/line2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/sc" />

                <TextView
                    android:id="@+id/tvSc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:fontFamily="@font/classy_flowers"
                    android:gravity="center_horizontal"
                    android:text="@string/standard"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="25sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/line2" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>